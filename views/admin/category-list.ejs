<%- include('../partials/header') %>

<div class="admin-layout">
    <%- include('../partials/admin-sidebar', { currentPage: 'categories' }) %>
    
    <div class="admin-main">
        <%- include('../partials/admin-header', { pageTitle: 'Manage Categories' }) %>
        
        <div class="admin-content">
            <% if (typeof flash !== 'undefined' && flash) { %>
                <div class="alert alert-<%= flash.type === 'error' ? 'danger' : 'success' %> alert-dismissible fade show" role="alert">
                    <%= flash.message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
            
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
                <h2 class="mb-0">Categories</h2>
                <a href="/admin/categories/new" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> <span class="d-none d-sm-inline">Add New Category</span><span class="d-sm-none">Add</span>
                </a>
            </div>
            
            <!-- Desktop Table View -->
            <div class="admin-table d-none d-md-block">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Products</th>
                                <th>Status</th>
                                <th>Sort Order</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (categories && categories.length > 0) { %>
                                <% categories.forEach(category => { %>
                                    <tr>
                                        <td>
                                            <strong><%= category.name %></strong>
                                            <br>
                                            <small class="text-muted">/<%= category.slug %></small>
                                        </td>
                                        <td>
                                            <%= category.description || '<span class="text-muted">No description</span>' %>
                                        </td>
                                        <td>
                                            <span class="badge bg-info"><%= category.productCount || 0 %></span>
                                        </td>
                                        <td>
                                            <% if (category.is_active) { %>
                                                <span class="badge bg-success">Active</span>
                                            <% } else { %>
                                                <span class="badge bg-secondary">Inactive</span>
                                            <% } %>
                                        </td>
                                        <td><%= category.sort_order || 0 %></td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/admin/categories/<%= category.id %>/edit" class="btn btn-outline-primary" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <form action="/admin/categories/<%= category.id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                                    <%- include('../partials/csrf-token') %>
                                                    <button type="submit" class="btn btn-outline-danger" title="Delete">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="6" class="text-center py-5">
                                        <i class="bi bi-inbox" style="font-size: 3rem; color: #ddd;"></i>
                                        <p class="mt-3 text-muted">No categories found. <a href="/admin/categories/new">Create your first category</a></p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Mobile Card View -->
            <div class="d-md-none">
                <% if (categories && categories.length > 0) { %>
                    <% categories.forEach(category => { %>
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="mb-1 fw-bold"><%= category.name %></h5>
                                        <small class="text-muted">/<%= category.slug %></small>
                                    </div>
                                    <div>
                                        <% if (category.is_active) { %>
                                            <span class="badge bg-success">Active</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary">Inactive</span>
                                        <% } %>
                                    </div>
                                </div>
                                
                                <div class="mb-3">
                                    <p class="mb-0 text-muted small">
                                        <%= category.description || 'No description' %>
                                    </p>
                                </div>
                                
                                <div class="row g-2 mb-3">
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <strong class="text-muted me-2">Products:</strong>
                                            <span class="badge bg-info"><%= category.productCount || 0 %></span>
                                        </div>
                                    </div>
                                    <div class="col-6">
                                        <div class="d-flex align-items-center">
                                            <strong class="text-muted me-2">Sort:</strong>
                                            <span><%= category.sort_order || 0 %></span>
                                        </div>
                                    </div>
                                </div>
                                
                                <div class="btn-group w-100" role="group">
                                    <a href="/admin/categories/<%= category.id %>/edit" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <form action="/admin/categories/<%= category.id %>/delete" method="POST" class="d-inline flex-fill" 
                                          onsubmit="return confirm('Are you sure you want to delete this category?');">
                                        <%- include('../partials/csrf-token') %>
                                        <button type="submit" class="btn btn-sm btn-danger w-100">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="card text-center py-5">
                        <div class="card-body">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #ddd;"></i>
                            <p class="text-muted mt-3">No categories found. <a href="/admin/categories/new">Create your first category</a></p>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    // Sidebar toggle
    document.getElementById('mobileSidebarToggle')?.addEventListener('click', function() {
        document.getElementById('sidebar').classList.toggle('active');
        document.getElementById('sidebarOverlay').classList.toggle('active');
    });
    
    document.getElementById('sidebarToggle')?.addEventListener('click', function() {
        document.getElementById('sidebar').classList.remove('active');
        document.getElementById('sidebarOverlay').classList.remove('active');
    });
    
    document.getElementById('sidebarOverlay')?.addEventListener('click', function() {
        document.getElementById('sidebar').classList.remove('active');
        this.classList.remove('active');
    });
</script>
</body>
</html>

