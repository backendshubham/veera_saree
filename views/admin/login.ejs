<%- include('../partials/header') %>
<%- include('../partials/loader') %>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center" style="background: linear-gradient(180deg, var(--veera-white) 0%, var(--veera-ivory) 30%, var(--veera-cream) 60%, var(--veera-pearl) 100%);">
    <div class="row w-100 justify-content-center">
        <div class="col-md-5 col-lg-4">
            <div class="card shadow-lg border-0 login-card" style="border-radius: 20px; overflow: hidden;">
                <div class="card-body p-5">
                    <div class="text-center mb-4">
                        <div class="login-icon-wrapper" style="width: 90px; height: 90px; background: linear-gradient(135deg, var(--veera-accent) 0%, var(--veera-accent-dark) 100%); border-radius: 50%; display: inline-flex; align-items: center; justify-content: center; margin-bottom: 2rem; box-shadow: 0 8px 24px rgba(212, 165, 116, 0.3);">
                            <i class="bi bi-shield-lock" style="font-size: 2.5rem; color: white;"></i>
                        </div>
                        <h2 class="card-title mb-2" style="font-family: 'Playfair Display', serif; font-size: 2rem; color: var(--veera-black);">Admin Login</h2>
                        <p class="text-muted" style="color: var(--veera-gray);">Veera Saree Center Admin Panel</p>
                    </div>
                    
                    <% if (typeof flash !== 'undefined' && flash) { %>
                        <div class="alert alert-<%= flash.type === 'error' ? 'danger' : 'success' %> alert-dismissible fade show" role="alert">
                            <%= flash.message %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    <% } %>
                    
                    <form action="/admin/login" method="POST">
                        <%- include('../partials/csrf-token') %>
                        <div class="mb-4">
                            <label for="email" class="form-label fw-semibold">Email Address</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background: #f8f9fa; border-right: none;"><i class="bi bi-envelope"></i></span>
                                <input type="email" class="form-control" id="email" name="email" 
                                       placeholder="admin@veerasarees.com" required style="border-left: none; padding-left: 0;">
                            </div>
                        </div>
                        <div class="mb-4">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <div class="input-group">
                                <span class="input-group-text" style="background: #f8f9fa; border-right: none;"><i class="bi bi-lock"></i></span>
                                <input type="password" class="form-control" id="password" name="password" 
                                       placeholder="Enter password" required style="border-left: none; padding-left: 0;">
                            </div>
                        </div>
                        <button type="submit" class="btn w-100 py-3" style="background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); border: none; border-radius: 12px; font-weight: 600; letter-spacing: 0.5px; box-shadow: 0 4px 16px rgba(0,0,0,0.15); color: white !important; transition: all 0.3s ease;">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </button>
                    </form>
                    
                    <div class="text-center mt-4">
                        <a href="/" class="text-decoration-none" style="color: var(--veera-accent-dark); font-weight: 600;">
                            <i class="bi bi-arrow-left"></i> Back to Website
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
