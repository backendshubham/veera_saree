<%- include('../partials/header') %>

<div class="admin-layout">
    <%- include('../partials/admin-sidebar', { currentPage: 'orders' }) %>
    
    <div class="admin-main">
        <%- include('../partials/admin-header', { pageTitle: 'Manage Orders' }) %>
        
        <div class="admin-content">
            <% if (typeof flash !== 'undefined' && flash) { %>
                <div class="alert alert-<%= flash.type === 'error' ? 'danger' : 'success' %> alert-dismissible fade show" role="alert">
                    <%= flash.message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>
            
            <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-3">
                <h2 class="mb-0">Orders</h2>
                <div class="btn-group flex-wrap" role="group">
                    <a href="/admin/orders" class="btn btn-outline-primary btn-sm <%= !req.query.status || req.query.status === 'all' ? 'active' : '' %>">All</a>
                    <a href="/admin/orders?status=pending" class="btn btn-outline-warning btn-sm <%= req.query.status === 'pending' ? 'active' : '' %>">Pending</a>
                    <a href="/admin/orders?status=processing" class="btn btn-outline-info btn-sm <%= req.query.status === 'processing' ? 'active' : '' %>">Processing</a>
                    <a href="/admin/orders?status=shipped" class="btn btn-outline-primary btn-sm <%= req.query.status === 'shipped' ? 'active' : '' %>">Shipped</a>
                    <a href="/admin/orders?status=delivered" class="btn btn-outline-success btn-sm <%= req.query.status === 'delivered' ? 'active' : '' %>">Delivered</a>
                </div>
            </div>
            
            <!-- Desktop Table View -->
            <div class="admin-table d-none d-md-block">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>Customer</th>
                                <th class="d-none d-md-table-cell">Email</th>
                                <th class="d-none d-lg-table-cell">Address</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th class="d-none d-lg-table-cell">Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (orders && orders.length > 0) { %>
                                <% orders.forEach(order => { %>
                                    <tr>
                                        <td><strong>#<%= order.id %></strong></td>
                                        <td>
                                            <%= order.user_name %>
                                            <% if (order.customer_phone) { %>
                                                <br><small class="text-muted"><i class="bi bi-telephone"></i> <%= order.customer_phone %></small>
                                            <% } %>
                                        </td>
                                        <td class="d-none d-md-table-cell"><%= order.user_email %></td>
                                        <td class="d-none d-lg-table-cell">
                                            <% if (order.shipping_address) { %>
                                                <small>
                                                    <%= order.shipping_address %><br>
                                                    <%= order.city || '' %><%= order.city && order.state ? ', ' : '' %><%= order.state || '' %>
                                                    <% if (order.pincode) { %> - <%= order.pincode %><% } %>
                                                </small>
                                            <% } else { %>
                                                <span class="text-muted">-</span>
                                            <% } %>
                                        </td>
                                        <td><strong>₹<%= order.total_amount.toLocaleString('en-IN', {minimumFractionDigits: 2}) %></strong></td>
                                        <td>
                                            <span class="badge bg-<%= 
                                                order.status === 'delivered' ? 'success' : 
                                                order.status === 'cancelled' ? 'danger' : 
                                                order.status === 'shipped' ? 'info' : 
                                                order.status === 'processing' ? 'primary' : 'warning' 
                                            %>">
                                                <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                                            </span>
                                        </td>
                                        <td class="d-none d-lg-table-cell"><%= new Date(order.created_at).toLocaleDateString() %></td>
                                        <td>
                                            <form action="/admin/orders/<%= order.id %>/status" method="POST" class="d-inline">
                                                <%- include('../partials/csrf-token') %>
                                                <select name="status" class="form-select form-select-sm" style="width: 100%; max-width: 120px;" onchange="this.form.submit()">
                                                    <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                                    <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>Processing</option>
                                                    <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                                    <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                                    <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                                </select>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            <% } else { %>
                                <tr>
                                    <td colspan="8" class="text-center py-5">
                                        <i class="bi bi-inbox" style="font-size: 3rem; color: #ddd;"></i>
                                        <p class="text-muted mt-3">No orders found</p>
                                    </td>
                                </tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- Mobile Card View -->
            <div class="d-md-none">
                <% if (orders && orders.length > 0) { %>
                    <% orders.forEach(order => { %>
                        <div class="card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-3">
                                    <div>
                                        <h5 class="mb-1 fw-bold">Order #<%= order.id %></h5>
                                        <small class="text-muted"><%= new Date(order.created_at).toLocaleDateString() %></small>
                                    </div>
                                    <span class="badge bg-<%= 
                                        order.status === 'delivered' ? 'success' : 
                                        order.status === 'cancelled' ? 'danger' : 
                                        order.status === 'shipped' ? 'info' : 
                                        order.status === 'processing' ? 'primary' : 'warning' 
                                    %>">
                                        <%= order.status.charAt(0).toUpperCase() + order.status.slice(1) %>
                                    </span>
                                </div>
                                
                                <div class="mb-3">
                                    <strong>Customer:</strong> <%= order.user_name %><br>
                                    <% if (order.customer_phone) { %>
                                        <small class="text-muted"><i class="bi bi-telephone"></i> <%= order.customer_phone %></small><br>
                                    <% } %>
                                    <small class="text-muted"><i class="bi bi-envelope"></i> <%= order.user_email %></small>
                                </div>
                                
                                <% if (order.shipping_address) { %>
                                    <div class="mb-3">
                                        <strong>Address:</strong><br>
                                        <small class="text-muted">
                                            <%= order.shipping_address %><br>
                                            <%= order.city || '' %><%= order.city && order.state ? ', ' : '' %><%= order.state || '' %>
                                            <% if (order.pincode) { %> - <%= order.pincode %><% } %>
                                        </small>
                                    </div>
                                <% } %>
                                
                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <strong>Total:</strong>
                                    <h5 class="text-primary mb-0">₹<%= order.total_amount.toLocaleString('en-IN', {minimumFractionDigits: 2}) %></h5>
                                </div>
                                
                                <form action="/admin/orders/<%= order.id %>/status" method="POST">
                                    <%- include('../partials/csrf-token') %>
                                    <select name="status" class="form-select form-select-sm w-100" onchange="this.form.submit()">
                                        <option value="pending" <%= order.status === 'pending' ? 'selected' : '' %>>Pending</option>
                                        <option value="processing" <%= order.status === 'processing' ? 'selected' : '' %>>Processing</option>
                                        <option value="shipped" <%= order.status === 'shipped' ? 'selected' : '' %>>Shipped</option>
                                        <option value="delivered" <%= order.status === 'delivered' ? 'selected' : '' %>>Delivered</option>
                                        <option value="cancelled" <%= order.status === 'cancelled' ? 'selected' : '' %>>Cancelled</option>
                                    </select>
                                </form>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="card text-center py-5">
                        <div class="card-body">
                            <i class="bi bi-inbox" style="font-size: 3rem; color: #ddd;"></i>
                            <p class="text-muted mt-3">No orders found</p>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.getElementById('mobileSidebarToggle')?.addEventListener('click', function() {
        document.getElementById('sidebar').classList.toggle('active');
        document.getElementById('sidebarOverlay').classList.toggle('active');
    });
    
    document.getElementById('sidebarToggle')?.addEventListener('click', function() {
        document.getElementById('sidebar').classList.remove('active');
        document.getElementById('sidebarOverlay').classList.remove('active');
    });
    
    document.getElementById('sidebarOverlay')?.addEventListener('click', function() {
        document.getElementById('sidebar').classList.remove('active');
        this.classList.remove('active');
    });
</script>
</body>
</html>
