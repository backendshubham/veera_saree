    /* Ensure proper card spacing and sizing */
    .product-card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
    }
    
    .product-card .card-body {
        padding: 1.25rem;
    }
    
    .product-card .card-title {
        font-size: 1rem;
        line-height: 1.4;
        margin-bottom: 0.75rem;
    }
    
    @media (min-width: 1200px) {
        /* On XL screens, show 4 cards per row in col-md-9 */
        #productsGrid .col-xl-3 {
            flex: 0 0 25%;
            max-width: 25%;
