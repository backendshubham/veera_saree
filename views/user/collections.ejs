    <div class="container mt-3">
        <div class="alert alert-<%= flash.type === 'error' ? 'danger' : 'success' %> alert-dismissible fade show" role="alert">
            <%= flash.message %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
