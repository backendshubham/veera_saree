<div class="container my-5">
    <div class="section-header mb-5">
        <h2 class="section-title">OUR COLLECTIONS</h2>
        <p class="section-subtitle">Browse through our carefully curated selection of traditional and contemporary sarees</p>
    </div>
    
    <!-- Category Filter -->
    <div class="text-center mb-5">
        <a href="/collections" class="category-filter-btn <%= selectedCategory === 'all' ? 'active' : '' %>">All</a>
        <a href="/collections?category=Silk" class="category-filter-btn <%= selectedCategory === 'Silk' ? 'active' : '' %>">Silk Collection</a>
        <a href="/collections?category=Cotton" class="category-filter-btn <%= selectedCategory === 'Cotton' ? 'active' : '' %>">Cotton</a>
        <a href="/collections?category=Chiffon" class="category-filter-btn <%= selectedCategory === 'Chiffon' ? 'active' : '' %>">Chiffon</a>
        <a href="/collections?category=Georgette" class="category-filter-btn <%= selectedCategory === 'Georgette' ? 'active' : '' %>">Georgette</a>
        <% if (categories && categories.length > 0) { %>
            <% categories.forEach(cat => { %>
                <% if (!['Silk', 'Cotton', 'Chiffon', 'Georgette'].includes(cat)) { %>
                    <a href="/collections?category=<%= cat %>" class="category-filter-btn <%= selectedCategory === cat ? 'active' : '' %>">
                        <%= cat %>
                    </a>
                <% } %>
            <% }); %>
        <% } %>
    </div>
    
    <!-- Products Grid -->
    <div class="row g-4">
        <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
                <div class="col-md-3 col-sm-6">
                    <div class="card product-card h-100 shadow-sm">
                        <div class="product-image-wrapper" style="position: relative;">
                            <% if (product.discount_percentage && product.discount_percentage > 0) { %>
                                <span class="sale-badge">Sale</span>
                            <% } %>
                            <% if (product.qr_code) { %>
                                <div class="product-qr-code-icon" style="position: absolute; top: 10px; right: 10px; z-index: 10; cursor: pointer; background: rgba(255, 255, 255, 0.9); padding: 8px; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.15);" onclick="openQRCodeModal(<%= JSON.stringify(product).replace(/"/g, '&quot;') %>)">
                                    <% if (product.qr_code_image) { %>
                                        <img src="<%= product.qr_code_image %>" alt="QR Code" style="width: 50px; height: 50px; display: block;">
                                    <% } else { %>
                                        <i class="bi bi-qr-code-scan" style="font-size: 2rem; color: var(--veera-accent-dark);"></i>
                                    <% } %>
                                </div>
                            <% } %>
                            <a href="/products/<%= product.id %>">
                                <img src="<%= product.image %>" class="card-img-top" alt="<%= product.title %>" style="height: 380px; object-fit: cover; width: 100%;">
                            </a>
                        </div>
                        <div class="card-body d-flex flex-column p-3">
                            <h6 class="card-title mb-2" style="min-height: 45px; font-weight: 600;"><%= product.title %></h6>
                            <!-- Rating Display -->
                            <% if (product.avgRating && product.avgRating > 0) { %>
                                <div class="product-rating mb-2">
                                    <div class="d-flex align-items-center">
                                        <div class="star-rating me-2">
                                            <% for (let i = 1; i <= 5; i++) { %>
                                                <i class="bi bi-star<%= i <= Math.round(product.avgRating) ? '-fill' : '' %> text-warning" style="font-size: 0.9rem;"></i>
                                            <% } %>
                                        </div>
                                        <span class="rating-text" style="font-size: 0.85rem; color: #666;">
                                            <strong><%= product.avgRating %></strong> (<%= product.totalRatings || 0 %>)
                                        </span>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="product-rating mb-2">
                                    <span class="text-muted" style="font-size: 0.85rem;">No ratings yet</span>
                                </div>
                            <% } %>
                            <div class="price-section mb-3">
                                <% if (product.original_price && product.original_price > product.price) { %>
                                    <span class="original-price">Rs. <%= product.original_price.toLocaleString('en-IN', {minimumFractionDigits: 2}) %></span>
                                <% } %>
                                <div class="mt-1">
                                    <span class="current-price">Rs. <%= product.price.toLocaleString('en-IN', {minimumFractionDigits: 2}) %></span>
                                    <% if (product.discount_percentage && product.discount_percentage > 0) { %>
                                        <span class="discount-badge">(-<%= product.discount_percentage %>%)</span>
                                    <% } %>
                                </div>
                            </div>
                            <div class="mt-auto">
                                <% if (product.stock > 0) { %>
                                    <a href="/products/<%= product.id %>" class="btn btn-light-modern w-100 mb-2">
                                        VIEW DETAILS
                                    </a>
                                    <% if (typeof userId !== 'undefined' && userId) { %>
                                        <form action="/cart/add" method="POST" class="d-inline w-100">
                                            <%- include('../partials/csrf-token') %>
                                            <input type="hidden" name="productId" value="<%= product.id %>">
                                            <input type="hidden" name="quantity" value="1">
                                            <button type="submit" class="btn btn-gradient-modern w-100">
                                                <i class="bi bi-cart-plus"></i> ADD TO CART
                                            </button>
                                        </form>
                                    <% } %>
                                <% } else { %>
                                    <button class="btn btn-secondary w-100" disabled style="padding: 12px; border-radius: 8px;">Out of Stock</button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <div class="alert alert-info text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 3rem; color: #ddd;"></i>
                    <p class="mt-3">No products found in this category.</p>
                </div>
            </div>
        <% } %>
    </div>
    
    <!-- Featured Categories Section -->
    <div class="featured-categories mt-5 pt-5">
        <h3 class="text-center mb-4" style="font-family: 'Playfair Display', serif; color: var(--veera-text);">Shop by Category</h3>
        <div class="row g-4">
            <div class="col-md-3 col-sm-6">
                <div class="category-card">
                    <div class="category-icon">
                        <i class="bi bi-gem"></i>
                    </div>
                    <h5>Silk Collection</h5>
                    <p>Luxurious silk sarees for special occasions</p>
                    <a href="/collections?category=Silk" class="category-link">Explore <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="category-card">
                    <div class="category-icon">
                        <i class="bi bi-flower1"></i>
                    </div>
                    <h5>Cotton</h5>
                    <p>Comfortable and breathable everyday wear</p>
                    <a href="/collections?category=Cotton" class="category-link">Explore <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="category-card">
                    <div class="category-icon">
                        <i class="bi bi-sparkles"></i>
                    </div>
                    <h5>Chiffon</h5>
                    <p>Elegant and lightweight for evening events</p>
                    <a href="/collections?category=Chiffon" class="category-link">Explore <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
            <div class="col-md-3 col-sm-6">
                <div class="category-card">
                    <div class="category-icon">
                        <i class="bi bi-stars"></i>
                    </div>
                    <h5>Georgette</h5>
                    <p>Flowing and graceful for modern occasions</p>
                    <a href="/collections?category=Georgette" class="category-link">Explore <i class="bi bi-arrow-right"></i></a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Why Choose Us Section -->
    <div class="why-choose-us mt-5 pt-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h3 style="font-family: 'Playfair Display', serif; color: var(--veera-text); margin-bottom: 2rem;">Why Choose Veera Saree Center?</h3>
                <div class="feature-list">
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="feature-content">
                            <h5>Authentic Quality</h5>
                            <p>Every saree is carefully selected to ensure premium quality and authenticity.</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="feature-content">
                            <h5>Wide Selection</h5>
                            <p>From traditional to contemporary, find the perfect saree for every occasion.</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="feature-content">
                            <h5>Free Shipping</h5>
                            <p>Enjoy free shipping on all orders with no minimum purchase required.</p>
                        </div>
                    </div>
                    <div class="feature-item">
                        <div class="feature-icon">
                            <i class="bi bi-check-circle-fill"></i>
                        </div>
                        <div class="feature-content">
                            <h5>Easy Returns</h5>
                            <p>Hassle-free returns and exchanges for your complete satisfaction.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="trust-badge">
                    <i class="bi bi-shield-check"></i>
                    <h4>Trusted by Thousands</h4>
                    <p>Join our community of satisfied customers who trust us for their saree needs.</p>
                </div>
            </div>
        </div>
    </div>
</div>

