    }
    
    @media (min-width: 992px) and (max-width: 1199px) {
        /* On LG screens, show 3 cards per row in col-md-9 */
        #productsGrid .col-lg-4 {
            flex: 0 0 33.333333%;
            max-width: 33.333333%;
        }
    }
    
    @media (min-width: 768px) and (max-width: 991px) {
        /* On MD screens, show 2 cards per row in col-md-9 */
        #productsGrid .col-md-6 {
